<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/language" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/language_array" />
    </LinearLayout>

    <!-- Theme Selection -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_theme"
        android:textSize="18sp"
        android:layout_marginTop="16dp" />

    <Spinner
        android:id="@+id/spinnerTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/theme_array"
        android:layout_marginTop="8dp" />

    <!-- Font Size Selection -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_font_size"
        android:textSize="18sp"
        android:layout_marginTop="24dp" />

    <Spinner
        android:id="@+id/spinnerFontSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/font_size_array"
        android:layout_marginTop="8dp" />
<Spinner
    android:id="@+id/spinnerColorScheme"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:entries="@array/color_scheme_array" />
    <Button
        android:id="@+id/buttonApplySettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/apply"
        android:layout_marginTop="24dp" />
</LinearLayout>